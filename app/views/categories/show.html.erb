<div class="container">
  <div class="row">
    <% @products.each do |product| %>
      <div class="product">
      <%= image_tag product.image.thumb.url%>
        <h5><%= link_to product.name, product%></h5>
      </div>
    <% end %>
  </div>

  <div class="row align-items-center justify-content-center">
    <%= paginate @products %>
  </div>
</div>
