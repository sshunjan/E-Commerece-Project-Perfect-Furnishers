<% @products = Product.where(category_id: @category)%>
<div class="container">
  <div class="row">
    <%  @products.each do |product| %>
      <div class="product">
      <%= image_tag product.image.thumb.url%>
        <div class="caption">
        <h4><%= link_to product.name, product%></h4>
        </div>
      </div>
    <% end %>
  </div>
</div>