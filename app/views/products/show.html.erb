<h4 class="display-4"><%= @product.name%> <small class="text-muted"> in <%= link_to @product.category.name, @product.category%></small></h4>
<div class="row justify-content-around">
  <div class="col-6 mt-4">
    <%= image_tag @product.image.url%>
  </div>
  <div class="col-6 mt-4">
    <%= @product.description%><br>
    $ <%= @product.price%>

    <form class="form-check form-check-inline float-right mt-5" method="Get" action="<%= cart_add_to_cart_path%>">
      <label for="quantity" name="quantity">Quantity</label>
      <input name="quantity" id="quantity" class="form-control m-2" type="number" value="1" >
      <input name="id" type="hidden" value="<%= @product.id%>">
      <input name="price" type="hidden" value="<%= @product.price%>">
      <button class="btn">Add To Cart</button>
    </div>
  </div>
</div>
