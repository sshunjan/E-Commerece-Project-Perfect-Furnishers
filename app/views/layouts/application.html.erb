<!DOCTYPE html>
<html>
  <head>
    <title>PerfectFurnishers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <%= render partial: 'shared/navbar'%>
    <div class='container'>

      <% @categories = Category.all() %>
      <%= render template: "categories/index", collection: @categories%>
      <%= yield %>
    </div>

    <footer class="py-5 bg-dark">
      <div class="container-fluid">
        <p class="m-0 text-center text-white">Copyright &copy; Perfect Furnishers 2018</p>
      </div>
      <!-- /.container -->
    </footer>
  </body>
</html>
