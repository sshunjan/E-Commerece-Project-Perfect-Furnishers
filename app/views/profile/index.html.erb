<h1 class="display-4">My Profile</h1>

<table class="table">
  <tbody>
    <tr>
      <th>Full Name</th>
      <td><%= @profile.name%></td>
    </tr>
    <tr>
      <th>Email</th>
      <td><%= @profile.user.email%></td>
    </tr>
    <tr>
      <th>Contact</th>
      <td><%= @profile.phone%></td>
    </tr>
    <tr>
      <th>Address</th>
      <td><%= @profile.address%></td>
    </tr>
    <tr>
      <th>City</th>
      <td><%= @profile.city%></td>
    </tr>
    <tr>
      <th>Province</th>
      <td><%= Tax.where(id: @profile.state).name%></td>
    </tr>
    <tr>
      <th>Zip</th>
      <td><%= @profile.zip%></td>
    </tr>
  </tbody>
</table>
<button class="btn">Edit My Profile</button>
